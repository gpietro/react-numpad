{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["es2023", "dom", "dom.iterable"],
    "baseUrl": ".",
    "paths": {
      "@oggi/numpad/*": ["src/*"],
      "@repo/ui/*": ["../ui/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
